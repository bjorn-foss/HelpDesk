</head>
<body>
    <!--Header section-->
    <%- include('../partials/cabecalho'); %>

    <div class="content">
        <div id="form_login">
            <form action="/logIn" method="post">
                <h1 id="formtitle" class="centralize_text">Log In</h1>

                <div class="mb-3">
                    <label for="user_input">User</label>
                    <input type="text" class="form-control" id="user_input" name="username" required>
                  </div>

